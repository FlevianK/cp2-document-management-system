{
  "name": "cp2-document-management-system",
  "version": "1.0.0",
  "description": "Document management system",
  "main": "index.js",
  "scripts": {
    "start:dev": "nodemon ./bin/www",
    "test:server": "NODE_ENV=test npm run seed && ./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha --report lcovonly -- -R spec ./tests/server",
    "test:client": "NODE_ENV=test npm run seed && ./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha --report lcovonly -- -R spec ./tests/client",
    "seed": "npm run migrate && sequelize db:seed:all",
    "migrate": "sequelize db:migrate:undo:all && sequelize db:migrate",
    "db:set-up": "sequelize db:migrate:undo:all && sequelize db:migrate && sequelize db:seed:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FlevianK/cp2-document-management-system.git"
  },
  "author": "Flevian Kanaiza",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FlevianK/cp2-document-management-system/issues"
  },
  "homepage": "https://github.com/FlevianK/cp2-document-management-system#readme",
  "dependencies": {
    "body-parser": "^1.17.2",
    "express": "^4.15.3",
    "jsonwebtoken": "^7.4.1",
    "morgan": "^1.8.2",
    "pg": "^6.2.3",
    "pg-hstore": "^2.3.2",
    "sequelize": "^3.30.4"
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "chai-http": "^3.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "sequelize-cli": "^2.7.0"
  }
}
